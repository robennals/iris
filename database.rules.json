{
	"rules": {
  	"userPrivate": {
  		"$user": {
  			".read": "$user == auth.uid",
  			".write": "$user == auth.uid"
      }
    },
    "special": {
      ".read": false,
      ".write": false,
      "versioncheck": {
        ".read": true
      }
    },
    "community": {
      ".read": true,
      ".write": false
    },
    "intake": {
      ".read": "root.child('special').child('master').child(author.uid).exists()",
      ".write": false
    },
    "group": {
      "$group": {
        ".write": false,
        ".read": "data.child('member').child(auth.uid).exists()",
      	"name": {
          ".read": true,
          ".write": false
        },
        "photo": {
          ".read": true,
          ".write": false
        },
        "memberMsg": {
          ".indexOn": ["time"]
        }
      }
    },
    "groupAdmin": {
      "$group": {
        ".write": false,
        ".read": "root.child('group').child($group).child('member').child(auth.uid).child('role').val() == 'admin'"
      }
    }
  }
}